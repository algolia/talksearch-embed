{
  "name": "talksearch",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-prerender",
    "build:production": "cross-env NODE_ENV=production npm run build",
    "serve": "preact build && preact serve",
    "dev": "preact watch --https",
    "lint": "eslint src",
    "test": "yarn lint",
    "format": "prettier --write '**/*.{ts,tsx,js,md,scss}' '!build/**/*'"
  },
  "eslintConfig": {
    "extends": [
      "algolia/react"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "no-warning-comments": "warn"
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-eslint": "8.2.2",
    "copy-webpack-plugin": "4.5.1",
    "eslint": "4.19.0",
    "eslint-config-algolia": "13.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.7.0",
    "if-env": "1.0.4",
    "node-sass": "4.7.2",
    "preact-cli": "2.2.1",
    "preact-cli-plugin-typescript": "0.2.2",
    "prettier": "1.10.2",
    "sass-loader": "6.0.6"
  },
  "dependencies": {
    "@types/algoliasearch": "3.24.9",
    "algoliasearch": "3.24.11",
    "cross-env": "5.1.3",
    "preact": "8.2.7",
    "preact-compat": "3.18.0",
    "preact-helmet": "4.0.0-alpha-3",
    "react-instantsearch": "4.5.1",
    "react-instantsearch-theme-algolia": "4.5.1",
    "react-media": "1.8.0",
    "react-pinboard": "0.0.9",
    "react-router-dom": "4.2.2",
    "react-youtube": "7.5.0",
    "sec-to-min": "1.0.1"
  }
}
